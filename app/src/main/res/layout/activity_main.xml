<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.corp.srihari.deca.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/logoView"
            android:layout_width="231dp"
            android:layout_height="205dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.101"
            app:srcCompat="@drawable/easy_exams_logo_resized"
            app:layout_constraintHorizontal_bias="0.504"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/startExam"
            android:layout_width="245dp"
            android:layout_height="56dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="#00000000"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/learnButton"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/learnButton"
            app:layout_constraintRight_toRightOf="@+id/learnButton"
            app:layout_constraintTop_toBottomOf="@+id/logoView"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/startexambutton" />

        <ImageButton
            android:id="@+id/PIButton"
            android:layout_width="245dp"
            android:layout_height="56dp"
            android:layout_marginBottom="43dp"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/pibutton" />

        <ImageButton
            android:id="@+id/learnButton"
            android:layout_width="245dp"
            android:layout_height="56dp"
            android:layout_marginBottom="8dp"
            android:background="#00000000"
            android:elevation="0dp"
            android:scaleType="fitXY"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/PIButton"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/PIButton"
            app:layout_constraintRight_toRightOf="@+id/PIButton"
            app:srcCompat="@drawable/learn_button" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph"
            android:layout_width="298dp"
            android:layout_height="191dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.338"
            app:layout_constraintHorizontal_bias="0.506" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/graph"
            app:layout_constraintLeft_toLeftOf="@+id/graph"
            app:layout_constraintRight_toRightOf="@+id/graph"
            app:layout_constraintTop_toTopOf="@+id/graph"
            app:layout_constraintVertical_bias="0.481"
            app:srcCompat="@drawable/no_data" />

        <TextView
            android:id="@+id/graphTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Exam Progress"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/graph"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintLeft_toLeftOf="@+id/graph"
            app:layout_constraintRight_toRightOf="@+id/graph"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/highScoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High Score: "
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/examsWritten"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/graph"
            app:layout_constraintRight_toRightOf="@+id/graph"
            app:layout_constraintTop_toBottomOf="@+id/graph"
            app:layout_constraintVertical_bias="0.862" />

        <TextView
            android:id="@+id/examsWritten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exams Written: 0"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/averageText"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/highScoreText"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/averageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average Score: NONE"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/examsWritten"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="72dp" />

        <Button
            android:id="@+id/resetStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Statistics"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/averageText"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/profile_exam_choice"
            android:layout_width="342dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/graphTitle"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/bottomNavOnClickColour"
        app:menu="@menu/navigation"
        app:itemIconTint="@drawable/changeiconbottom"
        app:itemTextColor="@drawable/changeiconbottom"/>

</LinearLayout>
