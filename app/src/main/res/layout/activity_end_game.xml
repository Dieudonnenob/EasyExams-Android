<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.corp.srihari.deca.EndGame">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarExam2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/bottomNavOnClickColour"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/titleEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/toolbarExam2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbarExam2" />
    <ImageButton
        android:id="@+id/homeExam2"
        android:layout_width="43dp"
        android:layout_height="44dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:tint="@color/white"
        app:srcCompat="@drawable/ic_home_black_24dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/toolbarExam2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/toolbarExam2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="@+id/toolbarExam2"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/toolbarExam2"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:text="Score: "
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarExam2" />

    <ImageButton
        android:id="@+id/wrongAnswersButton"
        android:layout_width="254dp"
        android:layout_height="57dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/wrong_answers"
        android:background="#00000000"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/scoreText"
        app:layout_constraintLeft_toLeftOf="@+id/fullExamButton"
        app:layout_constraintRight_toRightOf="@+id/fullExamButton"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/fullExamButton"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageButton
        android:id="@+id/fullExamButton"
        android:layout_width="254dp"
        android:layout_height="57dp"
        android:layout_marginBottom="15dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/newExamButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/newExamButton"
        app:layout_constraintRight_toRightOf="@+id/newExamButton"
        app:srcCompat="@drawable/full_exam" />

    <ImageButton
        android:id="@+id/newExamButton"
        android:layout_width="254dp"
        android:layout_height="57dp"
        android:layout_marginBottom="144dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/new_exam_button" />


</android.support.constraint.ConstraintLayout>
